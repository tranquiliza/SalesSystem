@inject IJSRuntime JSRuntime
@inject NavigationManager navigationManager

@page "/checkout"

<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s4"><a>INFORMATION</a></li>
            <li class="tab col s4 disabled"><a>Payment</a></li>
            <li class="tab col s4 disabled"><a>Confirmation</a></li>
        </ul>
    </div>

    <div id="CustomerInformation">
        <div class="row">
            <div class="col m9">
                <CustomerForm CompletedCallback="NavigateToPayment" />
            </div>
            <div class="col m3">
                <BasketComponent />
            </div>
        </div>
    </div>
</div>


@code   {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) { }

        await JSRuntime.InvokeVoidAsync("InitializeTabs").ConfigureAwait(false);

        await base.OnAfterRenderAsync(firstRender);
    }

    public void NavigateToPayment(Guid inquiryId)
    {
        navigationManager.NavigateTo("payment/" + inquiryId);
    }
}